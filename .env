# =============================================================================
# Leuphana Knowledge Graph - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# GraphDB Configuration (Primary - Recommended)
# -----------------------------------------------------------------------------

# GraphDB server URL
GRAPHDB_ENDPOINT=http://localhost:7200

# Repository name (will be created if doesn't exist)
GRAPHDB_REPOSITORY=leuphana-kg

# -----------------------------------------------------------------------------
# Scraper Configuration
# -----------------------------------------------------------------------------

# Request timeout in seconds
SCRAPER_TIMEOUT=30

# Delay between requests (be nice to the server)
SCRAPER_DELAY=1.0

# Maximum concurrent requests
SCRAPER_CONCURRENCY=5

# -----------------------------------------------------------------------------
# Output Paths
# -----------------------------------------------------------------------------

# Where to save raw JSON data
RAW_DATA_DIR=data/raw

# Where to save generated RDF files
RDF_DATA_DIR=data/rdf

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# OpenAI Configuration (for Natural Language Queries)
# -----------------------------------------------------------------------------

# Your OpenAI API key (required for NLQ feature)
OPENAI_API_KEY= 
# Model to use (default: gpt-5.2)
OPENAI_MODEL=gpt-5.2
